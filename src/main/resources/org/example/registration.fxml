<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.RegistrationController">
   <TextField fx:id="usernameField" layoutX="226.0" layoutY="175.0" promptText="username" />
   <Button layoutX="273.0" layoutY="263.0" mnemonicParsing="false" onAction="#onClickSignUpButton" text="sign up" />
   <Label fx:id="resultLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="238.0" layoutY="152.0" textAlignment="CENTER" textFill="RED" textOverrun="CENTER_ELLIPSIS" />
   <TextField fx:id="firstnameField" layoutX="226.0" layoutY="136.0" promptText="firstname" />
   <TextField fx:id="surnameField" layoutX="226.0" layoutY="94.0" promptText="surname" />
   <Label layoutX="226.0" layoutY="359.0" text="Already have an account?" />
   <Label layoutX="375.0" layoutY="359.0" onMouseClicked="#onClickSignInButton" text="Sign in" textFill="#1100ff">
      <font>
         <Font name="System Bold" size="12.0" />
      </font>
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor>
   </Label>
   <PasswordField fx:id="passwordField" layoutX="226.0" layoutY="217.0" promptText="password" />
</AnchorPane>
