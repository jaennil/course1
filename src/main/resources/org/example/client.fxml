<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox alignment="TOP_CENTER" prefHeight="600" prefWidth="600" xmlns="http://javafx.com/javafx/20.0.1"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.Controller.Client">
    <MenuBar>
        <menus>
            <Menu mnemonicParsing="false" text="Menu">
                <items>
                    <MenuItem mnemonicParsing="false" text="Sign up for an appointment"/>
                    <MenuItem mnemonicParsing="false" text="Add pet"/>
                </items>
            </Menu>
        </menus>
    </MenuBar>

    <HBox alignment="TOP_RIGHT" style="-fx-padding: 10px;">
        <Label onMouseClicked="#logOut" text="Log out" textFill="blue">
            <font>
                <Font name="System Bold" size="12.0"/>
            </font>
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Label>
    </HBox>
    <Label fx:id="welcomeLabel" text="Welcome, {firstname} {lastname}"/>

    <Label text="Sign up for an appointment">
        <font>
            <Font name="System Bold" size="14.0"/>
        </font>
    </Label>
    <TextField fx:id="animalNameTextField" maxWidth="150" promptText="animal name"/>
    <DatePicker fx:id="datePicker" promptText="date"/>
    <HBox alignment="CENTER" spacing="10.0">
        <VBox alignment="CENTER" prefWidth="100.0">
            <Label text="Breed"/>
        </VBox>
        <VBox alignment="CENTER">
            <ComboBox fx:id="breedComboBox" prefWidth="150.0" promptText="Choose..."/>
        </VBox>
    </HBox>
    <HBox alignment="CENTER" spacing="10.0"/>
    <HBox alignment="CENTER" spacing="10.0">
        <VBox alignment="CENTER" prefWidth="100.0">
            <Label text="Doctor"/>
        </VBox>
        <VBox alignment="CENTER">
            <ComboBox fx:id="doctorComboBox" prefWidth="150.0" promptText="Choose..."/>
        </VBox>
    </HBox>
    <Button fx:id="submitButton" onAction="#onClickSubmit" text="Submit"/>
</VBox>
